BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(LINUX_DIR)/arch/arm/configs/multi_v7_lpae.config $(LINUX_DIR)/arch/arm/configs/multi_v8.config $(LINUX_DIR)/arch/arm/configs/lsdk.config board/nxp/common/linux-4_9-xenomai.config"
BR2_LINUX_KERNEL_DTS_SUPPORT=n
#BR2_LINUX_KERNEL_UIMAGE=y
